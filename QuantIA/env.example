# API Keys para fuentes de datos
YAHOO_FINANCE_API_KEY=your_yahoo_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here

# Configuración de base de datos
DATABASE_URL=sqlite:///data/trading.db
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/trading

# Configuración de broker (para paper trading y live trading)
BROKER_API_KEY=your_broker_api_key_here
BROKER_SECRET_KEY=your_broker_secret_key_here
BROKER_SANDBOX=true

# Configuración de monitoreo
PROMETHEUS_PORT=8000
GRAFANA_PORT=3000

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# Configuración de seguridad
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Configuración de notificaciones
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here

# Configuración de desarrollo
DEBUG=false
ENVIRONMENT=development

